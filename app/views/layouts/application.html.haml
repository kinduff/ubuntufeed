!!!
%html
  %head
    %title UbuntuFeed | Noticias de Ubuntu en espa単ol
    %meta{ :charset => "utf-8" }
    %meta{ :'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
    %meta{ :content => 'width=device-width', :name => 'viewport' }
    %meta{ :content => "Centralizador de feeds de los blogs mas famosos sobre Ubuntu y Linux en espa単ol.", :name => "description" }
    %meta{ :content => "UbuntuFeed | Noticias de Ubuntu en espa単ol", :property => "og:title"}
    %meta{ :content => "Centralizador de feeds de los blogs mas famosos sobre Ubuntu y Linux en espa単ol.", :property => "og:description"}
    %meta{ :content => "http://ubuntufeed.co/logo.png", :property => "og:image"}
    %meta{ :content => "http://ubuntufeed.co", :property => 'og:url' }
    %link{ :href => "favicon.ico", :rel => "shortcut icon"}
    = auto_discovery_link_tag(:rss, "http://ubuntufeed.co")
    = stylesheet_link_tag    "application", :media => "all"
    = csrf_meta_tags
  %body
    %header
      .contenedor
        .logo
        %h1
          =link_to "UbuntuFeed", root_path
        %nav
          %ul
            %li
              = link_to "+", enviar_path
            %li
              = link_to "?", about_path
            %li.paginate
              -if @posts
                = paginate @posts
              -else
                =link_to "h", root_path
    = yield
    %aside
    %footer
      .contenedor
    :javascript
      current_page = #{params[:page] || 1 } 
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-38641523-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    = javascript_include_tag "application"
